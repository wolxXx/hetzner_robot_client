{
  "name": "wolxxx/hetzner_robot_client",
  "description": "a simple client for hetzner robot",
  "minimum-stability": "stable",
  "license": "MIT",
  "authors": [
    {
      "name": "wolxXx",
      "email": "wolxXx@wolxXx.de"
    }
  ],
  "config": {
    "discard-changes": true,
    "preferred-install": {
      "*": "dist"
    },
    "allow-plugins": {
    }
  },
  "autoload": {
    "psr-4": {
      "HetznerRobotClient\\": "lib/",
      "HetznerRobotClientTest\\": "tests/"
    }
  },
  "require": {
    "php": ">=7.1.0",
    "ext-json": "*",
    "guzzlehttp/guzzle": "^6.5",
    "json-mapper/json-mapper": "^2.11"
  },
  "require-dev": {
    "phing/phing": "^2.17",
    "phpunit/phpunit": "^7.5",
    "phpbench/phpbench": "*"
  },
  "scripts": {
    "test": [
      "./phing runTests"
    ]
  }
}
